@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

@if (!User.Identity.IsAuthenticated) //<!-- "!" ekleyerek koşulu tersine çevirin -->
{
    <div class="row">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 style="color:green">KAYIT FORMU</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    Adı
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Soyadı
                    <input asp-for="Input.Surname" class="form-control" />
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Email
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Telefon
                    <input asp-for="Input.TelefonNo" class="form-control" />
                    <span asp-validation-for="Input.TelefonNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Şifre
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Şifre Tekrar
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success form-control">Üye Oluştur</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Zaten giriş yaptınız. Yeni bir hesap oluşturmak için önce çıkış yapmalısınız.</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}