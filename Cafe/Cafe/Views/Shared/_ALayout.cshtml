
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/Site/images/icons/favicon.png" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Site/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Site/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Site/fonts/themify/themify-icons.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Site/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Site/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Site/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Site/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Site/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Site/vendor/slick/slick.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Site/vendor/lightbox2/css/lightbox.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Site/css/util.css">
    <link rel="stylesheet" type="text/css" href="/Site/css/main.css">
    <!--===============================================================================================-->
</head>
<body class="animsition">

    <!-- Header -->
    <header>
        <!-- Header desktop -->
        <div class="wrap-menu-header gradient1 trans-0-4">
            <div class="container h-full">
                <div class="wrap_header trans-0-3">
                    <!-- Logo -->
                    <div class="logo">
                        <a href="index.html">
                            <img src="/Site/images/logo.png" alt="IMG-LOGO" data-logofixed="/Site/images/logo.png">
                        </a>
                    </div>

                    <!-- Menu -->
                    <div class="wrap_menu p-l-45 p-l-0-xl">
                        <nav class="menu">
                            <ul class="main_menu">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        <a asp-area="Customer" asp-controller="Home" asp-action="Index">ANASAYFA</a>
                                    </li>

                                    <li>
                                        <a asp-area="Customer" asp-controller="Home" asp-action="Menu">MENÜ</a>
                                    </li>

                                    <li>
                                        <a asp-area="Customer" asp-controller="Home" asp-action="Rezervasyon">REZERVASYON</a>
                                    </li>

                                    <li>
                                        <a asp-area="Customer" asp-controller="Home" asp-action="Galeri">GALERİ</a>
                                    </li>
                                    <li>
                                        <a asp-area="Admin" asp-controller="Menu" asp-action="Index" target="_blank">ADMİN PANELİ</a>
                                    </li>
                                    <li>
                                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button type="submit" class="nav-link btn btn-link text-white">ÇIKIŞ</button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a asp-area="Customer" asp-controller="Home" asp-action="Index">ANASAYFA</a>
                                    </li>

                                    <li>
                                        <a asp-area="Customer" asp-controller="Home" asp-action="Menu">MENÜ</a>
                                    </li>

                                    <li>
                                        <a asp-area="Customer" asp-controller="Home" asp-action="Rezervasyon">REZERVASYON</a>
                                    </li>

                                    <li>
                                        <a asp-area="Customer" asp-controller="Home" asp-action="Galeri">GALERİ</a>
                                    </li>
                                    <li>
                                        <a asp-area="Customer" asp-controller="Home" asp-action="About">HAKKIMIZDA</a>
                                    </li>

                                    <li>
                                        <a asp-area="Customer" asp-controller="Home" asp-action="Blog">BLOG</a>
                                    </li>

                                    <li>
                                        <a asp-area="Customer" asp-controller="Home" asp-action="Contact">İLETİŞİM</a>
                                    </li>
                                }



                            </ul>
                        </nav>
                    </div>

                    <!-- Social -->
                    <div class="social flex-w flex-l-m p-r-20">
                      
                        <button class="btn-show-sidebar m-l-33 trans-0-4"></button>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Sidebar -->
    <aside class="sidebar trans-0-4">
        <!-- Button Hide sidebar -->
        <button class="btn-hide-sidebar ti-close color0-hov trans-0-4"></button>

        <!-- - -->
        <ul class="menu-sidebar p-t-95 p-b-70">
            <li class="t-center m-b-13">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="txt19">Anasayfa</a>
            </li>

            <li class="t-center m-b-13">
                <a asp-area="Customer" asp-controller="Home" asp-action="Menu" class="txt19">Menu</a>
            </li>

            <li class="t-center m-b-13">
                <a asp-area="Customer" asp-controller="Home" asp-action="Galeri" class="txt19">Galeri</a>
            </li>

            <li class="t-center m-b-13">
                <a asp-area="Customer" asp-controller="Home" asp-action="About" class="txt19">Hakkımızda</a>
            </li>

            <li class="t-center m-b-13">
                <a asp-area="Customer" asp-controller="Home" asp-action="Blog" class="txt19">Blog</a>
            </li>

            <li class="t-center m-b-33">
                <a asp-area="Customer" asp-controller="Home" asp-action="Contact" class="txt19">İletişim</a>
            </li>

            <li class="t-center">
                <!-- Button3 -->
                <a asp-area="Customer" asp-controller="Home" asp-action="Rezervasyon" class="btn3 flex-c-m size13 txt11 trans-0-4 m-l-r-auto">
                    Rezervasyon
                </a>
            </li>
            <br />
            @if (User.Identity.IsAuthenticated)
            {
                <li class="t-center m-b-33">
                    <a asp-area="Admin" asp-controller="Menu" asp-action="Index" target="_blank" class="txt19">ADMİN PANELİ</a>
                </li>
                <li class="t-center">
                    <form class="btn3 flex-c-m size13 txt11 trans-0-4 m-l-r-auto" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-white">ÇIKIŞ</button>
                    </form>
                </li>
            }
        </ul>

        <!-- - -->
    
    </aside>

    @RenderBody()

    <!-- Footer -->
    <footer class="bg1">
        <div class="container p-t-40 p-b-70">
            <div class="row">
                <!-- İletişim -->
                <div class="col-sm-6 col-md-3 p-t-50">
                    <h4 class="txt13 m-b-33">İletişim</h4>
                    @await Component.InvokeAsync("Iletisim")
                </div>

                <!-- Çalışma Saatleri -->
                <div class="col-sm-6 col-md-3 p-t-50">
                    <h4 class="txt13 m-b-32">Çalışma Saatleri</h4>
                    <ul>
                        <li class="txt14">Her Gün</li>
                        <li class="txt14">09:00 - 24:00</li>
                    </ul>
                </div>

                <!-- Hakkımızda -->
                <div class="col-sm-6 col-md-3 p-t-50">
                    <h4 class="txt13 m-b-32">Hakkımızda</h4>
                    <p class="txt14">
                        YEK Cafe, lezzetli menüsü ve samimi ortamıyla size keyifli anlar sunar. Herkese açık ve sıcak bir ortamda kaliteli hizmet veriyoruz.
                    </p>
                </div>

                <!-- Sosyal Medya -->
                <div class="col-sm-6 col-md-3 p-t-50">
                    <h4 class="txt13 m-b-32">Sosyal Medya</h4>
                    <div class="p-t-5 p-b-5">
                        <a href="https://www.instagram.com/yusuf.kbkc/" target="_blank" class="fs-15 c-white">
                            <i class="fa fa-instagram"></i>
                        </a>
                        <a href="https://www.facebook.com/yusufemre.kabakci" target="_blank" class="fs-15 c-white m-l-18">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <a href="#" class="fs-15 c-white m-l-18">
                            <i class="fa fa-twitter"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="row p-t-40">
                <!-- Hızlı Menü -->
                <div class="col-sm-12 col-md-6 p-t-30">
                    <h4 class="txt13 m-b-20">Hızlı Menü</h4>
                    <ul class="txt14">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                        <li><a asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a></li>
                        <li class="nav-item">
                            <a href="javascript:void(0);" class="nav-link text-danger" onclick="checkPassword()">Admin Kayıt Girişi</a>
                        </li>

                        <!-- Şifre kontrol scripti -->
                        <script>
                            function checkPassword() {
                                const password = prompt("Lütfen şifreyi girin:");
                                if (password === "112233") {
                                    window.location.href = "/Identity/Account/Register";
                                } else if (password !== null) {
                                    alert("Hatalı şifre!");
                                }
                            }
                        </script>
                        <li><a asp-controller="Menu" asp-action="Index">Menü</a></li>
                        <li><a asp-controller="Contact" asp-action="Index">İletişim</a></li>
                    </ul>
                </div>

                <!-- Harita -->
                <div class="col-sm-12 col-md-6 p-t-30">
                    <h4 class="txt13 m-b-20">Konumumuz</h4>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d902.934102407095!2d29.155114057185823!3d40.42886869487899!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2str!4v1744292891540!5m2!1str!2str"
                            width="100%" height="200" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>

        <div class="end-footer bg2">
            <div class="container">
                <div class="flex-sb-m flex-w p-t-22 p-b-22">
                    <div class="txt17 p-r-20 p-t-5 p-b-5">
                        <a asp-area="Identity" asp-page="/Account/Login" class="text-white">© 2025 YEK Cafe | Tüm Hakları Saklıdır</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>



    <!-- Back to top -->
    <div class="btn-back-to-top bg0-hov" id="myBtn">
        <span class="symbol-btn-back-to-top">
            <i class="fa fa-angle-double-up" aria-hidden="true"></i>
        </span>
    </div>

    <!-- Container Selection1 -->
    <div id="dropDownSelect1"></div>

    <!-- Modal Video 01-->
    <div class="modal fade" id="modal-video-01" tabindex="-1" role="dialog" aria-hidden="true">

        <div class="modal-dialog" role="document" data-dismiss="modal">
            <div class="close-mo-video-01 trans-0-4" data-dismiss="modal" aria-label="Close">&times;</div>

            <div class="wrap-video-mo-01">
                <div class="w-full wrap-pic-w op-0-0"><img src="/Site/images/icons/video-16-9.jpg" alt="IMG"></div>
                <div class="video-mo-01">
                    <iframe src="https://www.youtube.com/embed/5k1hSu2gdKE?rel=0&amp;showinfo=0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script type="text/javascript" src="/Site/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script type="text/javascript" src="/Site/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script type="text/javascript" src="/Site/vendor/bootstrap/js/popper.js"></script>
    <script type="text/javascript" src="/Site/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script type="text/javascript" src="/Site/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script type="text/javascript" src="/Site/vendor/daterangepicker/moment.min.js"></script>
    <script type="text/javascript" src="/Site/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script type="text/javascript" src="/Site/vendor/slick/slick.min.js"></script>
    <script type="text/javascript" src="/Site/js/slick-custom.js"></script>
    <!--===============================================================================================-->
    <script type="text/javascript" src="/Site/vendor/parallax100/parallax100.js"></script>
    <script type="text/javascript">$('.parallax100').parallax100();</script>
    <!--===============================================================================================-->
    <script type="text/javascript" src="/Site/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script type="text/javascript" src="/Site/vendor/lightbox2/js/lightbox.min.js"></script>
    <!--===============================================================================================-->
    <script src="/Site/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")

</body>
</html>

